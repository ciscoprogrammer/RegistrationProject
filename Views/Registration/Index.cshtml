@model IEnumerable<RegistrationProject.Models.RegistTable>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:blue">Registration - Index</h1>

<p>

    <a asp-action="Create" class="btn btn-sm btn-info" style="background-color:yellowgreen">Create New</a>

</p>
<table class="table table-striped">
    <thead>
        <tr>
            
            <th>
                Name
            </th>
            <th>
                Email Id
            </th>
            <th>
                Gender
            </th>
            <th>
                Mobile Number
            </th>
            <th>
                Countries
            </th>
            <th>
                Profile Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <img src="/Content/@item.ProfileImage" width="50" height="50" />
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-info" style="width:57.53px">Edit</a> |
                    
                <td>
                    <form method="post" action="@Url.Action("Delete", new { id = item.Id })" onclick="showDeleteConfirmation()">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" value="delete" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
                
            </tr>
        }
    </tbody>
</table>

    @section Scripts {
        <script>
            function showDeleteConfirmation() {
                return confirm('Are you sure you want to delete this record?');
            }
        </script>
    }

